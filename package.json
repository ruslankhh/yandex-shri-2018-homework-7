{
  "name": "yandex-shri-2018-homework-7",
  "version": "0.0.0",
  "description": "Домашнее задание #7 в ШРИ Яндекса 2018.",
  "scripts": {
    "start": "open ./reports/index.html",
    "audit": "npm run audit-mobile && npm run audit-desktop",
    "audit-mobile": "source ./bin/update_report_mobile.sh && npm run lighthouse-mobile",
    "audit-desktop": "source ./bin/update_report_desktop.sh && npm run lighthouse-desktop",
    "lighthouse-mobile": "lighthouse -n --config-path=lighthouse.config.js https://lifehacker.ru --output-path=$PWD/reports/$DATE-mobile/$DATE-mobile-lifehacker.ru.html --save-assets --view",
    "lighthouse-desktop": "lighthouse -n --config-path=lighthouse.config.js https://lifehacker.ru --output-path=$PWD/reports/$DATE-desktop/$DATE-desktop-lifehacker.ru.html --save-assets --disable-device-emulation --disable-network-throttling --view"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruslankhh/yandex-shri-2018-homework-7.git"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "lighthouse": "^2.9.4"
  }
}
