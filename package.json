{
  "name": "yandex-shri-2018-homework-7",
  "version": "0.0.0",
  "description": "Домашнее задание #7 в ШРИ Яндекса 2018.",
  "scripts": {
    "start": "open ./reports/index.html",
    "deploy": "gh-pages -d reports",
    "audit": "npm run audit-mobile && npm run audit-desktop",
    "audit-mobile": "source ./bin/update_report_mobile.sh && npm run lighthouse-mobile",
    "audit-desktop": "source ./bin/update_report_desktop.sh && npm run lighthouse-desktop",
    "lighthouse-mobile": "lighthouse -n --config-path=lighthouse.config.js https://lifehacker.ru --output-path=$PWD/reports/$DATE-mobile-lifehacker.ru.html --view",
    "lighthouse-desktop": "lighthouse -n --config-path=lighthouse.config.js https://lifehacker.ru --output-path=$PWD/reports/$DATE-desktop-lifehacker.ru.html --disable-device-emulation --disable-network-throttling --view",
    "pagespeed": "bash ./bin/run_psi.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruslankhh/yandex-shri-2018-homework-7.git"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "lighthouse": "^2.9.4",
    "psi": "^3.1.0"
  }
}
